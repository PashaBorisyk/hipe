<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="colorControlActivated">@color/allowed</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.LightAccentColor" parent="AppTheme">
        <item name="colorAccent">@color/applicationLight</item>
    </style>

    <style name="TranceparentStatus" parent="AppTheme" />
    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->
    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="LoginScreenFormsHintStyle" parent="TextAppearance.Design.Hint">
        <item name="colorControlActivated">@color/allowed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/allowed</item>
    </style>


    <style name="LoginScreenFormsInputStyle" parent="AppTheme">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginScreenFormsErrorStyle" parent="TextAppearance.Design.Error">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/forbidden</item>
    </style>

</resources>
